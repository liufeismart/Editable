<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_picture"
        android:layout_width="800dp"
        android:layout_height="800dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_picture"
            android:layout_width="800dp"
            android:layout_height="800dp"
            android:background="@mipmap/ic_launcher"/>

        <com.liufeismart.editable.EditFramePanel
            android:id="@+id/layout_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

        <LinearLayout
            android:id="@+id/layout_ibns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/margin_h15"
            android:layout_marginTop="@dimen/margin_h10"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ibn_delete"
                android:layout_width="@dimen/size_h27"
                android:layout_height="@dimen/size_h27"
                android:layout_marginRight="@dimen/margin_h5"
                android:background="@mipmap/icon_picture_delete" />

            <ImageButton
                android:id="@+id/ibn_up"
                android:layout_width="@dimen/size_h27"
                android:layout_height="@dimen/size_h27"
                android:layout_marginRight="@dimen/margin_h5"
                android:background="@mipmap/icon_picture_up" />

            <ImageButton
                android:id="@+id/ibn_down"
                android:layout_width="@dimen/size_h27"
                android:layout_height="@dimen/size_h27"
                android:layout_marginRight="@dimen/margin_h5"
                android:background="@mipmap/icon_picture_down" />

            <ImageButton
                android:id="@+id/ibn_edit"
                android:layout_width="@dimen/size_h27"
                android:layout_height="@dimen/size_h27"
                android:background="@mipmap/icon_picture_edit" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
